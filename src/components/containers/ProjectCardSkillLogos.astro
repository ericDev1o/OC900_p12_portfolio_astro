---
import type { LogoKey } from '../../custom/types/LogoKey';
import { logos as logosMap } from '../../config/logoPathsConfig';

interface Props {
  logos: LogoKey[];
  repo?: string;
}

const { logos: projectLogos, repo } = Astro.props;
---

{projectLogos.length > 0 && ( 
    <div 
        class='
            flex 
            flex-wrap 
            shrink-0 
            justify-between 
            items-center
            gap-3'
    >
        {projectLogos.map((logo) => {
            const src = logosMap[logo];

            return (
            <a
                href={repo}
                target="_blank"
                rel='
                    noopener 
                    noreferrer'
                class='
                    hover:scale-110 
                    transition-transform 
                    motion-reduce:transform-none'
            >
                <img
                    src={src}
                    alt={logo}
                    width="32"
                    height="32"
                    loading="lazy"
                    decoding="async"
                />
            </a>
            );
        })}      
    </div>
)}